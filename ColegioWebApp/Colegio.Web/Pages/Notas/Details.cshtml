@page "{id:int}"
@model Colegio.Web.Pages.Notas.Details
@{
    ViewData["Title"] = "Detalle de nota";
}

<h2>Detalle de nota</h2>
<partial name="_Alerts" />

<div class="card">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Id</dt>
            <dd class="col-sm-9">@Model.Nota.Id</dd>

            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">@Model.Nota.Nombre</dd>

            <dt class="col-sm-3">Valor</dt>
            <dd class="col-sm-9">@Model.Nota.Valor</dd>

            <dt class="col-sm-3">Profesor</dt>
            <dd class="col-sm-9">@Model.Nota.ProfesorNombre (Id: @Model.Nota.IdProfesor)</dd>

            <dt class="col-sm-3">Estudiante</dt>
            <dd class="col-sm-9">@Model.Nota.EstudianteNombre (Id: @Model.Nota.IdEstudiante)</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a class="btn btn-secondary" asp-page="Index">Volver</a>
    <a class="btn btn-primary" asp-page="Edit" asp-route-id="@Model.Nota.Id">Editar</a>
</div>