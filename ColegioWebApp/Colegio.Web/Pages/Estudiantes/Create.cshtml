@page
@model Colegio.Web.Pages.Estudiantes.Create
@{
    ViewData["Title"] = "Crear estudiante";
}

<h2>Crear estudiante</h2>
<partial name="_Alerts" />

<form method="post" id="estudianteForm" >
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input class="form-control" asp-for="Form.Nombre" />
        <span class="text-danger" asp-validation-for="Form.Nombre"></span>
    </div>

    <button type="button"
            class="btn btn-success"
            data-bs-toggle="modal"
            data-bs-target="#confirmActionModal"
            data-form="#estudianteForm"
            data-title="Confirmar creación"
            data-text="¿Deseas crear este estudiante?">
        Guardar
    </button>
    <a class="btn btn-secondary" asp-page="Index">Volver</a>
</form>

<partial name="_ConfirmActionModal" />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}