@page
@model Colegio.Web.Pages.IndexModel
@{
    ViewData["Title"] = "Inicio";
}

<div class="page-header d-print-none mb-3">
  <div class="row align-items-center">
    <div class="col">
      <h2 class="page-title">Panel del Colegio</h2>
      <div class="text-muted">Acceso rápido a la gestión del sistema.</div>
    </div>
  </div>
</div>

<partial name="_Alerts" />

<div class="row row-cards">
  <div class="col-md-4">
    <div class="card">
      <div class="card-body">
        <div class="d-flex align-items-center">
          <span class="avatar bg-blue-lt me-3">
            <i class="ti ti-users"></i>
          </span>
          <div>
            <div class="text-muted">Estudiantes</div>
            <div class="h2 m-0">@Model.TotalEstudiantes</div>
          </div>
        </div>

        <div class="mt-3 text-muted">Consulta, crea, edita y elimina estudiantes.</div>

        <div class="mt-3">
          <a class="btn btn-primary w-100" asp-page="/Estudiantes/Index">
            Gestionar estudiantes
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="card">
      <div class="card-body">
        <div class="d-flex align-items-center">
          <span class="avatar bg-green-lt me-3">
            <i class="ti ti-user"></i>
          </span>
          <div>
            <div class="text-muted">Profesores</div>
            <div class="h2 m-0">@Model.TotalProfesores</div>
          </div>
        </div>

        <div class="mt-3 text-muted">Administra los profesores del colegio.</div>

        <div class="mt-3">
          <a class="btn btn-primary w-100" asp-page="/Profesores/Index">
            Gestionar profesores
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="card">
      <div class="card-body">
        <div class="d-flex align-items-center">
          <span class="avatar bg-yellow-lt me-3">
            <i class="ti ti-notes"></i>
          </span>
          <div>
            <div class="text-muted">Notas</div>
            <div class="h2 m-0">@Model.TotalNotas</div>
          </div>
        </div>

        <div class="mt-3 text-muted">Registra y consulta notas (0 a 10).</div>

        <div class="mt-3">
          <a class="btn btn-primary w-100" asp-page="/Notas/Index">
            Gestionar notas
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
@if (Model.UltimasNotas.Count == 0)
{
  <div class="card mt-3">
    <div class="card-body text-muted">
      Aún no hay notas registradas.
    </div>
  </div>
}
@if (Model.UltimasNotas.Count > 0)
{
  <div class="card mt-3">
    <div class="card-header">
      <h3 class="card-title">Últimas notas registradas</h3>
    </div>
    <div class="card-table table-responsive">
      <table class="table table-vcenter">
        <thead>
        <tr>
          <th>Nota</th>
          <th>Estudiante</th>
          <th>Profesor</th>
          <th style="width: 90px;">Valor</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var n in Model.UltimasNotas)
        {
          <tr>
            <td>@n.Nombre</td>
            <td>@n.EstudianteNombre</td>
            <td>@n.ProfesorNombre</td>
            <td>@n.Valor</td>
          </tr>
        }
        </tbody>
      </table>
    </div>
  </div>
}
